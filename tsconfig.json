{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@db/*": ["packages/db/*"],
      "@web/*": ["apps/web/*"],
      "@api/*": ["apps/api/*"],
      "@config/*": ["packages/config/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
