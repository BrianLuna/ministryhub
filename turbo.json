{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", ".env*"],
      "outputs": [
        "apps/web/.next/**",
        "apps/api/dist/**",
        "packages/db/dist/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src/**", ".eslintrc.*", "eslint.config.*", "package.json"]
    },
    "format": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": ["src/**", "tsconfig.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": []
    }
  }
}
